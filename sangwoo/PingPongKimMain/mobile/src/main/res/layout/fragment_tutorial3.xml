<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="10dp"
    android:orientation="vertical">

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="20sp"
        android:text="      3단계 : 당신의 스윙을 보여주세요"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <TextView
        android:layout_width="364dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/three_step"
        android:textColor="#000000"
        android:textSize="20sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:background="#FEC141">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="개발 완료되면 IMG or GIF"/>

        <!-- 이 레이아웃 수정해줘야 함 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="3"
            >
            <Button
                android:id="@+id/buttonTemp"
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="(개발용)그래프 띄우기"/>

            <Button
                android:id="@+id/buttonTemp2"
                android:layout_width="10dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="(개발용)메인 페이지로 이동"/>
        </LinearLayout>
    </LinearLayout>
    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <TableLayout
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_gravity="center">

        <!-- action에 따라 각 row별 txt, img의 visibility 속성 값 조정하기 -->
        <!-- First swing -->
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <TextView
                android:id="@+id/swing1_txt"
                android:width="200dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:textColor="#000000"
                android:paddingTop="15dp"
                android:visibility="visible"
                android:text="@string/three_step_first" />

            <imageView
                android:id="@+id/swing1_tmg"
                android:layout_height="match_parent"
                android:width="35dp"
                android:height="35dp"
                android:visibility="visible"
                android:src="@drawable/swing_check_btn" />
        </TableRow>

        <!--  Second swing -->
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <TextView
                android:id="@+id/swing2_txt"
                android:width="200dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:textColor="#000000"
                android:paddingTop="15dp"
                android:visibility="visible"
                android:text="@string/three_step_second" />

            <imageView
                android:id="@+id/swing2_img"
                android:layout_height="match_parent"
                android:width="35dp"
                android:height="35dp"
                android:visibility="invisible"
                android:src="@drawable/swing_check_btn_none" />
        </TableRow>

        <!-- Third swing -->
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <TextView
                android:id="@+id/swing3_txt"
                android:width="200dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:textColor="#000000"
                android:paddingTop="15dp"
                android:visibility="visible"
                android:text="@string/three_step_third" />

            <imageView
                android:id="@+id/swing3_img"
                android:layout_height="match_parent"
                android:width="35dp"
                android:height="35dp"
                android:visibility="visible"
                android:src="@drawable/swing_check_btn_none" />
        </TableRow>

        <!-- Fourth swing -->
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <TextView
                android:id="@+id/swing4_txt"
                android:width="200dp"
                android:layout_height="50dp"
                android:layout_gravity="left"
                android:textColor="#000000"
                android:paddingTop="15dp"
                android:visibility="visible"
                android:text="@string/three_step_fourth" />

            <imageView
                android:id="@+id/swing4_img"
                android:layout_height="match_parent"
                android:width="35dp"
                android:height="35dp"
                android:visibility="visible"
                android:src="@drawable/swing_check_btn_none" />
        </TableRow>

        <!-- Fifth swing -->
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <TextView
                android:id="@+id/swing5_txt"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_gravity="left"
                android:textColor="#000000"
                android:paddingTop="15dp"
                android:visibility="visible"
                android:text="@string/three_step_fifth" />

            <imageView
                android:id="@+id/swing5_img"
                android:layout_height="match_parent"
                android:width="35dp"
                android:height="35dp"
                android:visibility="visible"
                android:src="@drawable/swing_check_btn_none" />
        </TableRow>

    </TableLayout>

</LinearLayout>
